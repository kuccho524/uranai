<!-- ログイン画面 -->
<div class="container">
  <div class="row">
    <div class="col-sm-8 mx-auto">
      <h2>会員ログイン</h2>

      <!-- ログインフォーム -->
      <%= form_with model: @member, url: member_session_path, local: true do |f| %>
        <%= render "members/shared/error_messages", resource: resource %>
        <%= content_tag(:div, flash[:alert], :id => "flash_alert") if flash[:alert] %>
        <table class='table table-borderless'>
          <tr>
            <th><%= f.label :email, "メールアドレス" %></th>
            <td><%= f.email_field :email, autofocus: true, placeholder: "XXX@XXXX.com", size: "40" %></td>
          </tr>
          <tr>
            <th><%= f.label :password, "パスワード" %></th>
            <td><%= f.password_field :password, size: "40" %></td>
          </tr>
          <tr>
            <td></td>
            <td><%= f.submit "ログイン", class: 'btn btn-success btn-md' %></td>
          </tr>
        </table>
      <% end %>
      <%= render "members/shared/links" %>
    </div>
  </div>
</div>
