<div class="container">
  <div class="row">
    <div class="col-sm-10 mx-auto">
      <!-- 会員登録フォーム -->
      <h2>Sign up</h2>
      <%= form_with model: @member, url: member_registration_path, id: 'new_member', class: 'new_member', local:true do |f| %>
        <table>
          <%= render "public/customers/shared/error_messages", resource: resource %>
          <tr>
             <div class="form-group">
                <th><label class="control-label col-xs-2">名前</label></th>
                <td>（姓）</td>
                <td><%= f.text_field :last_name, autofocus: true, class: "form-control" %></td>
                <td>（名）</td>
                <td><%= f.text_field :first_name, autofocus: true, class: "form-control"%></td>
              </div>
          </tr>
          <tr>
            <div class="form-group">
              <th><label class="control-label col-xs-2">フリガナ</label></th>
              <td>（セイ）</td>
              <td><%= f.text_field :last_name_kana, autofocus: true, class: "form-control"  %></td>
              <td>（メイ）</td>
              <td><%= f.text_field :first_name_kana, autofocus: true, class: "form-control" %></td>
            </div>
          </tr>
          <tr>
             <div class="form-group">
                <th><label class="control-label col-xs-2">生年月日</label></th>
                <td><%= f.select :year, [*1920..2021], class: "form-control" %> 年</td>
                <td><%= f.select :month, [*1..12], class: "form-control" %> 月</td>
                <td><%= f.select :day, [*1..31], class: "form-control" %> 日</td>
              </div>
          </tr>
          <tr>
            <div class="form-group">
              <th><label class="control-label col-xs-2">メールアドレス</label></th>
              <td></td>
              <td><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %></td>
              <td></td>
            </div>
          </tr>
          <tr>
            <div class="form-group">
              <th><label class="control-label col-xs-2">パスワード(６文字以上)</label></th>
              <td></td>
              <td><%= f.password_field :password, autocomplete: "new-password", class: "form-control" %></td>
              <td></td>
            </div>
          </tr>
          <tr>
            <div class="form-group">
              <th><label class="control-label col-xs-2">パスワード(確認用)</label></th>
              <td></td>
              <td><%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %></td>
              <td></td>
            </div>
          </tr>
          <tr>
            <th></th>
            <td></td>
            <td><%= f.submit "新規登録", class: 'btn btn-primary'%></td>
            <td></td>
          </tr>
        </table>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
