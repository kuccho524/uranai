<!-- 会員のマイページ -->
<div class="container">
  <div class="row">
    <div class="col-sm-10 mx-auto">
      <div class="mt-4 mb-4 bg-light d-inline-block">
        <h4>会員情報</h4>
      </div>

      <!-- 会員情報の表示 -->
      <div class="row">
        <div class="col-12 col-lg-8">
          <%= render 'admin/members/info' %>
        </div>
      </div>

      <!-- 会員情報編集画面へのリンク -->
      <div class="d-flex pb-2">
        <%= link_to "登録情報を編集する", edit_admin_member_path, class: "btn btn-primary px-4" %>
      </div>
    </div>
  </div>
</div>
