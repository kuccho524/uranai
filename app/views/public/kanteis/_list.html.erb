<table class='table table-hover table-inverse'>
  <thead>
    <th>投稿日時</th>
    <th>投稿者</th>
    <th>コース</th>
  </thead>
  <tbody>
    <% kanteis.each do |kantei| %>
      <tr>
        <td>
          <%= link_to kantei_path(kantei.id), method: :get, local:true do %>
            <%= kantei.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
          <% end %>
        </td>
        <td>
          <%= kantei.member.last_name %>　<%= kantei.member.first_name %>
        </td>
        <td>
          <%= kantei.course %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>